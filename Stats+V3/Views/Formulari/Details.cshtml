@model Stats_V3.Models.FullFormularViewModel

@{
    ViewBag.Title = "Details";
}

<br />
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="~/Formulari/Index">Formularet</a>
    </li>
    <li class="breadcrumb-item active">Detajet</li>
</ol>
<br />
<div>
    <h4>Formulari</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MungesaMeArsye)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MungesaMeArsye)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MungesaPaArsye)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MungesaPaArsye)
        </dd>




    </dl>
</div>
<div>

    <table class="table table-bordered">
        <thead>
            <tr>


                <th>Lenda</th>
                <th>Suksesi lendor</th>
                <th>Nr nxenese femra</th>
                <th>Nr nxenese meshkuj</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.suksesiLendor)
            {
                <tr>


                    <th>@item.Lenda.Emertimi</th>
                    <th>@item.Suksesi.Emertimi</th>
                    <th>@item.NrNxenesveFemra</th>
                    <th>@item.NrNxenesveMeshkuj</th>

                </tr>
            }

        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
